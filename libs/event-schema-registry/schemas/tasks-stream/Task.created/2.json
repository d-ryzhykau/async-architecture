{
  "$schema": "https://json-schema.org/draft/2020-12/schema",

  "$defs": {
    "event_data": {
      "properties": {
        "public_id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "jira_id": {
          "type": ["string", "null"]
        },
        "description": {
          "type": "string"
        },
        "assignment_price": {
          "type": "string"
        },
        "completion_price": {
          "type": "string"
        }
      },
      "required": [
        "public_id",
        "title",
        "jira_id",
        "description",
        "assignment_price",
        "completion_price"
      ],
      "title": "TaskStreamData",
      "type": "object"
    }
  },

  "type": "object",
  "properties": {
    "event_name": {
      "type": "string",
      "enum": [
        "Task.created"
      ]
    },
    "event_version": {
      "type": "number",
      "enum": [
        1
      ]
    },
    "data": {
      "$ref": "#/$defs/event_data"
    }
  },
  "required": [
    "event_name",
    "event_version",
    "data"
  ]
}
